<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
  <property name="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521:oracle</property>
  <property name="hibernate.connection.username">tpecommerce</property>
  <property name="hibernate.connection.password">tpecommerce</property>
  <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
  <property name="hibernate.default_schema">tpecommerce</property>
  <property name="show_sql">true</property>
  <mapping class="com.epsi.tpecommerce.entity.Approvisionnement"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.Catalogue"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.Categorie"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.Client"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.Commande"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.Fournisseur"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.HistoriqueStatutCmd"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.Prix"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.Produit"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.SousCategorie"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.StatutCmd"></mapping>
  <mapping class="com.epsi.tpecommerce.entity.Tva"></mapping>
</session-factory>
</hibernate-configuration>